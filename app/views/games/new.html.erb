<h1>New game</h1>
<div class="main-container">
  <div class="game-letters">
    <ul>
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
    </ul>
  </div>

  <div class="game-form">
    <form action="/score" method="post">
      <input type="text" name="word" placeholder="What's the longuest word you can find?" class="user-input">
      <input type="submit" value="Play" class="play-btn">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
